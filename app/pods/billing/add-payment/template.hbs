<h3>Make A Credit Payment</h3>
<div class="row">
    <div class="col-md-6">


        <div class="panel panel-default" id="credit-panel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="panel-title">
                            <span class="label label-info">#1</span> Choose which type of payment to make
                            <button class="btn btn-primary pull-right" {{action "toggleCredit"}}>{{toggleText}}</button>
                        </h3>

                    </div>
                </div>
            </div>
            <div class="panel-body" id="card-on-file">
                <div class="form-group required">
                    <label></label>

                    <div class="input-group">
                        {{#x-select value=model.card class="form-control"}}
                            <option>Select</option>
                            {{#each model.cards as |item|}}
                                {{#x-option value=item}}{{item.name}}{{/x-option}}
                            {{/each}}
                        {{/x-select}}

                        {{#input-tooltip content="Only active credit cards will appear in this list."}}
                            {{fa-icon "info"}}
                        {{/input-tooltip}}
                    </div>
                </div>
            </div>


            <div class="panel-body hidden" id="new-credit-card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Check #</label>

                            <div class="input-group">
                                {{input type="text" class="form-control" value=model.blankCheck.number id="checkNumber" disabled=true}}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Check Date</label>

                            <div class="input-group">
                                {{date-picker date=model.blankCheck.date format='MM-DD-YYYY' valueFormat='YYYY-MM-DD' class="form-control" allowBlank=true yearRange="0,4" id="checkDate" disabled=true}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <div class="col-md-6">


        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title"><span class="label label-info">#2</span> Enter the payment amount</h3>
            </div>

            <div class="panel-body">

                <div class="form-group">
                    <div class="input-group">
                        {{input type="text" class="form-control" value=model.amount}}

                        {{#input-tooltip content="Amount should not exceed this account's outstanding balance."}}
                            {{fa-icon "info"}}
                        {{/input-tooltip}}
                    </div>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" {{action 'save' model}}>Submit</button>
                    {{#link-to 'billing.summary' class="btn btn-primary"}}Cancel{{/link-to}}
                </div>
            </div>
        </div>


    </div>
</div>