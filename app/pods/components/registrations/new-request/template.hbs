<div class="row">
    <div class="col-md-2">
        <div class="form-group">
            {{#if mode}}
                {{#x-select value=request.priority class='form-control'}}
                    <option>Select</option>
                    {{#each priorities as |item|}}
                        {{#x-option value=item}}{{item}}{{/x-option}}
                    {{/each}}
                {{/x-select}}
            {{else}}
                <label>
                    {{request.priority}}
                </label>
            {{/if}}
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group">
            {{#x-select class='form-control' value=currentLocation comp=this action=locationChanged}}
                <option>Select</option>
                {{#each locations as |item|}}
                    {{#x-option value=item.id}}{{item.name}}{{/x-option}}
                {{/each}}
            {{/x-select}}

        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            {{#x-select value=currentSession class='form-control' disabled=isSessionDisabled comp=this action=sessionChanged }}
                <option>Select</option>
                {{#each filteredSessions as |item|}}
                    {{#x-option value=item.id}}{{item.name}}{{/x-option}}
                {{/each}}
            {{/x-select}}

        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            {{#x-select value=request.event class='form-control' disabled=isEventDisabled}}
                <option>Select</option>
                {{#each filteredEvents as |item|}}
                    {{#x-option value=item}}{{item.fullName}}{{/x-option}}
                {{/each}}
            {{/x-select}}
        </div>
    </div>

    <div class="col-md-1">
        <button class="btn btn-primary" {{action "removeRequest" }}>{{fa-icon 'trash'}}</button>
    </div>
</div>