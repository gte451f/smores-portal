<div class="row">
    <div class="col-md-6">
        <div class="box box-{{box}}">
            <div class="box-header with-border">
                <h3 class="box-title">{{fa-icon 'users'}} Owners</h3>

                <div class="box-tools">
                    {{#link-to 'members.add-owner' class="btn btn-box-tool"}}{{fa-icon "plus"}} Owner{{/link-to}}
                </div>
            </div>
            <div class="box-body">
                <div class="list-group">
                    {{#each record in model.owners}}
                        {{#link-to 'members.edit-owner' record.id class="list-group-item"}}
                            <h4 class="list-group-item-heading">{{record.firstName}} {{record.lastName}}</h4>

                            <p class="list-group-item-text">{{record.relationship}}</p>
                        {{/link-to}}
                    {{else}}
                        <li>no records found ... :-(</li>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="box box-{{box}}">
            <div class="box-header with-border">
                <h3 class="box-title">{{fa-icon 'users'}} Campers</h3>

                <div class="box-tools">
                    {{#link-to 'members.add-attendee' class="btn btn-box-tool"}}{{fa-icon "plus"}} Camper{{/link-to}}
                </div>
            </div>
            <div class="box-body">
                <div class="list-group">
                    {{#each record in model.attendees}}
                        {{#link-to 'members.edit-attendee' record.id class="list-group-item"}}
                            <h4 class="list-group-item-heading">{{record.firstName}} {{record.lastName}}</h4>

                            <p class="list-group-item-text">
                                {{moment record.dob 'MM/DD/YYYY'}} -
                                {{#if record.active}}
                                    <span class="label label-success">Active</span>
                                {{else}}
                                    <span class="label label-warning">Inactive</span>
                                {{/if}}
                            </p>
                        {{/link-to}}
                    {{else}}
                        <li>no records found ... :-(</li>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>