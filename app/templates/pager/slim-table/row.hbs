<tbody>
{{#each record in this}}
    <tr>
        {{#each col in columns}}
            <td>{{pager-loop record col}}</td>
        {{/each}}
        <td>
            {{#link-to linkPath record class="btn btn-primary btn-xs pull-right"}} Open {{/link-to}}
        </td>
    </tr>
{{else}}
    <tr>no records found ... :-(</tr>
{{/each}}
</tbody>